{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://strr.gov.bc.ca/.well_known/schemas/registration",
  "type": "object",
  "title": "STRR Registration",
  "properties": {
    "registration": {
      "type": "object",
      "registrationType": {
        "type": "string",
        "default": "HOST",
        "enum": [
          "HOST",
          "PLATFORM"
        ]
      },
      "if": {
        "properties": {
          "registrationType": {
            "const": "HOST"
          }
        }
      },
      "then": {
        "$ref": "https://strr.gov.bc.ca/.well_known/schemas/host_registration"
      },
      "else": {
        "if": {
          "properties": {
            "registrationType": {
              "const": "PLATFORM"
            }
          }
        },
        "then": {
          "$ref": "https://strr.co/.well_known/schemas/platform_registration"
        }
      }
    }
  },
  "required": [
    "registration"
  ]
}
